@inject IServISApi api

<h3>Nastavenia automaticky generovaných správ</h3>

@if (AutogeneratedMessages is not null)
{
		@foreach (var message in AutogeneratedMessages)
		{
			<AutogeneratedMessageForm AutogeneratedMessage="@message" />
		}
}
else
{
	<p>Načítava sa...</p>
}

@code {
	private List<AutogeneratedMessageForm> forms = new();

	public List<AutogeneratedMessage> AutogeneratedMessages { get; set; } = null!;

	protected override async Task OnInitializedAsync()
	{
		await base.OnInitializedAsync();

		AutogeneratedMessages = await api.GetAutogeneratedMessagesAsync();
	}
}
